<div class="row">
  <div class="col-lg-12">
    <table class="table table-hover">
      <thead>
        <th>Ranking</th>
        <th>Name</th>
        <th>Upvote</th>
      </thead>
      <tbody>
        <% @movies.each do |movie| %>
          <tr>
            <td>Ranked: <%= movie.rank%></td>
            <td><%= link_to movie.title, movie_path(movie.id) %></td>
            <td><%= button_to 'Upvote', upvote_movie_path(movie.id), class: 'btn btn-default' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= button_to 'View All Media', root_path, :method => :get, class: 'btn btn-default' %> <%= button_to 'Add A Movie ', new_movie_path , :method => :get, class: 'btn btn-default' %>
  </div>
</div>
