<div class="col-lg-12">
  <h1><%= @movie.title %> <small>Recorded by: <%= @movie.director %></small></h1>
  <h4>Ranked: <%= @movie.rank %></h4>
  <p>
    <%= @movie.description %>
  </p>
  <%= button_to 'Upvote', upvote_movie_path(@movie.id), class: "btn btn-primary" %>
  <%= button_to "Edit #{@movie.title}", edit_movie_path(@movie.id) , :method => :get,   class: "btn btn-default" %>
  <%= button_to 'Delete', movie_path, :method => :delete, class: "btn btn-danger" %>
  <%= button_to 'View All Movies', movies_path, :method => :get, class: "btn btn-default" %>
  <%= button_to 'View All Media', root_path, :method => :get, class: "btn btn-default" %>
</div>
