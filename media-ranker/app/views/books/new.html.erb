<div class="col-lg-12">
  <h2>New Book</h2>
  <%= form_for @book do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
      <%= f.label :author %>
      <%= f.text_field :author, class: "form-control" %>
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
    </div>
    <%= f.submit "Save", class: "btn btn-default" %>
  <% end %>
</div>
