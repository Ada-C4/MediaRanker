<table>
  <tbody>
    <tr>
      <th>Ranking</th>
      <th>Name</th>
      <th>Upvote</th>
    </tr>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.upvotes %></td>
        <td><%= link_to album.name, album_path(album.id) %></td>
        <td><%= button_to "Upvote", upvote_album_path(album.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "View All Media", root_path %>
<%= link_to "Add an Album", new_album_path %>
