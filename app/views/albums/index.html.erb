<div class="col-lg-12">
  <table class="table table-hover">
    <tbody>
      <tr>
        <th> Ranking </th>
        <th> Name </th>
        <th> Upvote </th>
      </tr>
    <% @albums.each do |album| %>
      <tr>
      <td><%= album.ranking %></td>
      <td><%= link_to album.title, album_path(album.id) %></td>
      <td><%= button_to "Upvote", upvote_album_path(album.id) %></td>
    <% end %>
      </tr>
    </tbody>
  </table>
<%= link_to "View all media", root_url, class: "btn btn-default" %>  <%= link_to "Add an album", new_album_path, class: "btn btn-default" %>
</div>
