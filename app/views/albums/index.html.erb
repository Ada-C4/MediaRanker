<div class="row">
  <div class="col-lg-12">
    <table class="table table-hover">
      <tbody>
        <tr>
          <th> Ranking </th>
          <th> Name </th>
          <th> Upvote </th>
        </tr>
        <% @albums.each do |album| %>
        <tr>
          <td><%= album.rank %></td>
          <td><%= link_to "#{album.name}", album_path(album.id) %></td>
          <td><%= link_to "upvote", album_upvote_path(album.id), method: :post, class: "btn btn-default" %></td>
          <% end %>
        </tr>
      </tbody>
    </table>
    <%= link_to "View All Media", root_path, class: "btn btn-default" %>
    <%= link_to "Add an album", new_album_path, class: "btn btn-default" %>
    </div>
  </div>
</div>
