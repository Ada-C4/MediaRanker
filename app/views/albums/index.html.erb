<table>
  <thead>
    <tr>
      <th>
        Ranking
      </th>
      <th>
        Name
      </th>
      <th>
        Upvote
      </th>
    </tr>
  </thead>
  <tbody>
    <% @albums_sort.each do |album| %>
    <tr>
      <td><%= album.rank %></td>
      <td><%= link_to album.name, album_path(album)%></td>
      <td>
        <%= button_to "Upvote", { action: "upvote", id: album.id, class: "vote" }, method: "patch" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= button_to "View All Media", root_path, method: :get %>
<%= button_to "Add a album", new_album_path, method: :get %>
