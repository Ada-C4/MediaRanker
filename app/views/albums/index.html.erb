<div class="row">
  <div class="col-lg-12">
    <table class="table table-hover">
      <tbody>
        <tr>
          <th>Ranking</th>
          <th>Name</th>
          <th>Upvote</th>
        </tr>
        <% @albums.each do |album| %>
          <tr>
            <td><%= album.rank %></td>
            <td><%= link_to album.name, album_path(album.id) %></td>
            <td><%= button_to "Upvote", upvote_albums_path(album.id), :class => "btn btn-default" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to "View All Media", root_path, class: "btn btn-default" %>
    <%= link_to "Add an Album", new_album_path, class: "btn btn-default" %>
  </div>
</div>
