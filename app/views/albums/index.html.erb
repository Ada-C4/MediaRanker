<div class="row">
  <div class="col-lg-12">
    <table class="table table-hover">
      <tbody>
        <tr>
          <th>Ranking</th>
          <th>Name</th>
          <th>Upvote</th>
        </tr>
        <% @albums.by_ranking.each do |album| %>
          <tr>
            <td>
              Ranked: <%=album.ranking %>
            </td>
            <td>
              <%= link_to "#{album.title}", album_path(album.id), action: :show %>
            </td>
            <td>
              <%= button_to "Upvote", album_upvote_path(album.id), method: :patch, class: "btn btn-default" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to "View All Media", root_path, class: "btn btn-default" %>
    <%= link_to "Add an Album", new_album_path, class: "btn btn-default" %>
  </div>
</div>
