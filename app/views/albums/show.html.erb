<div class="col-lg-12">
<h1><%= @album.name %> <small>Written by: <%= @album.artist %></small></h1>
<h4>Upvotes: <%= @album.upvotes %></h4>
<p><%= @album.description %></p>

<%= button_to "Upvote", upvote_album_path, class: "btn btn-primary" %>
<%= link_to "Edit #{@album.name}", edit_album_path(@album.id), class: "btn btn-default"  %>
<%=link_to "DELETE", album_path(@album.id), method: :delete, data: {confirm: "Are you sure?"},  class: "btn btn-danger" %>
<%= link_to "View All Albums", albums_path, class: "btn btn-default" %>
<%= link_to "View All Media", root_path, class: "btn btn-default" %>
</div>
