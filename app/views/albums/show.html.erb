<div class="row">
  <div class="col-lg-12">
    <h1><%= @album.title %>
        <small>Recorded by: <%= @album.artist %></small>
    </h1>
    <h4>Ranked:<%= @album.ranking %></h4>
    <p><%= @album.description %></p>
    <div>
      <%= button_to 'Upvote', album_upvote_path(@album.id), method: :post %>
    </div>
    <div>
      <%= link_to "Edit #{@album.title}", edit_album_path(@album.id) %>
      <%= link_to "Delete",  { :controller=>"albums", action: :destroy, :id => @album.id}, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
</div>
