<%= form_for @album do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :artist %>
  <%= f.text_field :artist %>
  <br>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br>
  <%= f.hidden_field :ranking, :value => 0 %>
  <%= f.submit value: "Save" %>
<% end %>
