<%= form_for @model, url: { action: @action}, method: @method do |f| %>

  <fieldset>
    <legend><%=@title%></legend>
    <%= f.label :title %>
    <%= f.text_field :title%>
    <br>
    <%= f.label :artist%>
    <%= f.text_field :artist %>
    <br>
    <%= f.label :description%>
    <%= f.text_field :description %>
    <br>
  </fieldset>
  <%= f.submit %>
<% end %>
