<ul>
  <% @book.errors.each do |column, message| %>
    <li>
      <strong><%= column.capitalize %></strong> <%= message %>
    </li>
  <% end %>
</ul>


<%= form_for @book do |f| %>
  <%= f.label :Name %>:
  <%= f.text_field :name, :required => true %>
	<br>
  <%= f.label :Author %>:
  <%= f.text_field :author, :required => true %>
  <br>
  <%= f.label :Description %>:
  <%= f.text_field :description %>
  <br>
  <%= @book.persisted? ? (f.submit value: "Update book", id: 'special-button') : (f.submit value: "Add book", id: 'special-button') %>
<% end %>
