<%= form_for @book do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <br>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br>
  <%= f.hidden_field :ranking, :value => 0 %>
  <%= f.submit value: "Save" %>
<% end %>
