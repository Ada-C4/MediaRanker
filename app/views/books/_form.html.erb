<ul>
  <% @movie.errors.each do |column, message| %>
  <li>
    <strong><%= column.capitalize %></strong> <%= message %>
  </li>
  <% end %>
</ul>
<h1><%= @title %></h1>
<%= form_for @book, url: { action: @action } do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :author %>
<%= f.text_field :author %>
<%= f.label :description %>
<%= f.text_field :description %>
<%= f.submit "Save" %>
<% end %>
