<h1><%= @book.name %></h1>
<small>Written by: <%= @book.author %></small>
<h4>Upvotes: <%= @book.upvotes %></h4>
<p><%= @book.description %></p>

<%= button_to "Upvote", upvote_book_path %>
<br>
<%= link_to "Edit #{@book.name}", edit_book_path(@book.id) %>
<%=link_to "DELETE", book_path(@book.id), method: :delete, data: {confirm: "Are you sure?"} %>
<%= link_to "View All Books", books_path %>
<%= link_to "View All Media", root_path %>
