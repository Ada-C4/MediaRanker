
<table class = "table table-hover">
  <tr>
    <th> Ranking </th>
    <th> Name </th>
    <th> Upvote </th>
  </tr>

  <% @books.each do |book| %>
  <tr>
    <td>Ranked: <%= book.rank %></td>
    <td><%= link_to book.name, book_path(book.id)%></td>
    <td><%= button_to 'Upvote', book_upvote_path(book.id), method: :post, class: "btn btn-default" %></td>
  </tr>
  <% end %>
</table>
<%= link_to 'View All Media', root_path, class: "btn btn-default" %>
<%= link_to 'Add a new Book', new_book_path, class: "btn btn-default" %>
