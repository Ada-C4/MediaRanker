<table class="table table-hover">
  <tbody>
    <tr>
      <th>Ranking</th>
      <th>Name</th>
      <th>Upvote</th>
    </tr>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.rank %></td>
        <td><%= link_to book.name, book_path(book.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
