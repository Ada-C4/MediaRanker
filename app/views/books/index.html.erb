<table class="table table-hover">
  <thead>
    <tr>
      <th>
        Ranking
      </th>
      <th>
        Name
      </th>
      <th>
        Upvote
      </th>
    </tr>
  </thead>
  <tbody>
    <% @books_sort.each do |book| %>
    <tr>
      <td>Ranked: <%= book.rank %></td>
      <td><%= link_to book.name, book_path(book)%></td>
      <td>
        <%= button_to "Upvote", { action: "upvote", id: book.id }, method: "patch", class: "btn btn-default" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= button_to "View All Media", root_path, method: :get, class: "btn btn-default" %>
<%= button_to "Add a Book", new_book_path, method: :get, class: "btn btn-default" %>
