<table>
  <tr>
    <th>
      Ranking
    </th>
    <th>
      Name
    </th>
    <th>
      Upvote
    </th>
  </tr>
<% @books.each do |book| %>
  <tr>
    <td>
      Ranked:
      <% if book.upvotes.nil? %>
        0
      <% else %>
        <%= book.upvotes %>
      <% end %>
    </td>
    <td>
      <a href="/books/<%= book.id %>"><%= book.name %></a>
    </td>
    <td>
      <%= button_to "Upvote", "/books/#{book.id}/upvote",  method: :patch, class: 'x-button' %>
    </td>
  </tr>
<% end %>
</table>

<%= button_to "View All Media", "/",  method: :get, class: 'x-button' %>
<%= button_to "Add a Book", new_book_path,  method: :get, class: 'x-button' %>
