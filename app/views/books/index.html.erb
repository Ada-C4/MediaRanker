<%= link_to "sort by ascending", books_path(order: 'asc') %>
<%= link_to "sort by descending", books_path(order: 'desc') %>

<table>
  <thead>
    <tr>
      <th>Votes</th>
      <th>Title</th>
      <th>Upvote?</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.votes.present? ? book.votes : "0" %></td>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= link_to "Upvote!", book_upvote_path(book), :method => :patch %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Go Home", "/" %>
<%= link_to "New Book", new_book_path %>
