<h1> All Books </h1>

<table>
  <tr>
    <th> Ranking </th>
    <th> Name </th>
    <th> Upvote </th>
  </tr>

  <% @books.each do |book| %>
  <tr>
    <td><%= book.rank %></td>
    <td><%= link_to book.name, book_path(book.id)%></td>
    <td><%= button_to 'Upvote', book_upvote_path(book.id), method: :post %></td>
  </tr>
  <% end %>
</table>
<%= link_to 'View All Media', root_path %>
<%= link_to 'Add a new Book', new_book_path %>
