<h3>Edit Book</h3>

<%= form_for @book, url: {action: "update"}, html: {class: "edit-book"} do |f| %>

<%= f.label :name, "Name" %>
<%= f.text_field :name %>

<%= f.label :author, "Author" %>
<%= f.text_field :author %>

<%= f.label :description, "Description" %>
<%= f.text_area :description %>

<%= f.submit "Save" %>
<% end %>
