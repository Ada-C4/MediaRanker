<h3>New Movie</h3>

<%= form_for @movie, url: {action: "create"}, html: {class: "new-movie"} do |f| %>

<%= f.label :name, "Name" %>
<%= f.text_field :name %>

<%= f.label :director, "Director" %>
<%= f.text_field :director %>

<%= f.label :description, "Description" %>
<%= f.text_area :description %>

<%= f.submit "Save" %>
<% end %>
