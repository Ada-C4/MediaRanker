<h2> Edit Movie </h2>
  <%= form_for @movie, action: 'update', method: :patch do |f| %>
<fieldset>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :director %>
    <%= f.text_field :director %>
    <br>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <br>
  </fieldset>
  <%= f.submit("Save") %>
  <% end %>
