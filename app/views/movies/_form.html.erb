<ul>
  <% @movie.errors.each do |column, message| %>
  <li>
    <strong><%= column.capitalize %></strong> <%= message %>
  </li>
  <% end %>
</ul>
<h1><%= @title %></h1>
<%= form_for @movie, url: { action: @action } do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :director %>
<%= f.text_field :director %>
<%= f.label :description %>
<%= f.text_field :description %>
<%= f.submit "Save"%>
<% end %>
