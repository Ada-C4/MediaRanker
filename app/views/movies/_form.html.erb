<div class="form-group">
  <%= form_for @movie do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
    <%= f.label :director %>
    <%= f.text_field :director, class: "form-control" %>
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
    <br>
    <%= f.submit "Save", class: "btn btn-default" %>
  <% end %>
</div>
