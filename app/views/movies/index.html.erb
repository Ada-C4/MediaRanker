<table class="table table-hover">
  <tr>
    <th>
      Ranking
    </th>
    <th>
      Name
    </th>
    <th>
      Upvote
    </th>
  </tr>
  <% @movies.each do |movie| %>
    <tr>
      <td>
        Ranked: <%= movie.ranked %>
      </td>
      <td>
        <%= link_to movie.name, movie_path(movie) %>
      </td>
      <td>
        <%= button_to "Upvote", movie_upvote_path(movie), method: :patch, class: "btn btn-default" %>
      </td>
    </tr>
  <% end %>
</table>
<a class="btn btn-default" href="<%= root_path %>">View All Media</a>
<a class="btn btn-default" href="<%= new_movie_path %>">Add a Movie</a>
