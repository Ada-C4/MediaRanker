<div class="row">
  <div class="col-lg-12">
    <table class="table table-hover">
      <tr>
        <th>
          Ranking
        </th>
        <th>
          Name
        </th>
        <th>
          Upvote
        </th>
      </tr>
    <% @movies.each do |movie| %>
      <tr>
        <td>
          Ranked:
          <% if movie.upvotes.nil? %>
            0
          <% else %>
            <%= movie.upvotes %>
          <% end %>
        </td>
        <td>
          <a href="/movies/<%= movie.id %>"><%= movie.name %></a>
        </td>
        <td>
          <%= button_to "Upvote", "/movies/#{movie.id}/upvote", method: :patch, class: 'btn btn-default' %>
        </td>
      </tr>
    <% end %>
    </table>
    <a class="btn btn-default" href="/">View All Media</a>
    <a class="btn btn-default" href="/movies/new">Add a Movie</a>
  </div>
</div>
