<div>
  <table class="table table-hover">
    <tr >
      <th>Ranking</th>
      <th>Name</th>
      <th>Upvote</th>
    </tr>
    <% @movies.each do |movie| %>
    <tr >
      <td>Ranked: <%= movie.rank %></td>
      <td><%= link_to "#{movie.name}", movie_path(id: movie.id) %></td>
      <td><%= link_to "Upvote", upvote_path(id: movie.id), method: :patch %></td>
    </tr>
    <% end %>
  </table>
  <%= link_to "Add a Movie", new_movie_path %>
</div>
