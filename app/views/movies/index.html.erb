
<table class ="table table-hover">
  <tr>
    <th> Ranking </th>
    <th> Name </th>
    <th> Upvote </th>
  </tr>

  <% @movies.each do |movie| %>
  <tr>
    <td><%= movie.rank %></td>
    <td><%= link_to movie.name, movie_path(movie.id)%></td>
    <td><%= button_to 'Upvote', upvote_path(movie.id), method: :post, class: "btn btn-default" %></td>
  </tr>
  <% end %>
</table>
<%= link_to 'View All Media', root_path, class: "btn btn-default"  %>
<%= link_to 'Add a new Movie', new_movie_path, class: "btn btn-default"  %>
