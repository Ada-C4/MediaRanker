<h1> All movies </h1>

<table>
  <tr>
    <th> Ranking </th>
    <th> Name </th>
    <th> Upvote </th>
  </tr>

  <% @movies.each do |movie| %>
  <tr>
    <td><%= movie.rank %></td>
    <td><%= link_to movie.name, movie_path(movie.id)%></td>
    <td><%= button_to 'Upvote', upvote_path(movie.id), method: :post %></td>
  </tr>
  <% end %>
</table>
<%= link_to 'View All Media', root_path %>
<%= link_to 'Add a new Movie', new_movie_path %>
