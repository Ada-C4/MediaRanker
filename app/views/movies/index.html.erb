<table>
  <thead>
    <tr>
      <th>
        Ranking
      </th>
      <th>
        Name
      </th>
      <th>
        Upvote
      </th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
    <tr>
      <td><%= movie.rank %></td>
      <td><%= link_to movie.name, movie_path(movie)%></td>
      <td>
        <%= button_to "Upvote", { action: "upvote", id: movie.id, class: "vote" }, method: "patch" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= button_to "View All Media", root_path, method: :get %>
<%= button_to "Add a Movie", new_movie_path, method: :get %>
