<div class="row">
  <div class="col-lg-12">
    <table class="table table-hover">
      <tbody>
        <tr>
          <th> Ranking </th>
          <th> Name </th>
          <th> Upvote </th>
        </tr>
        <% @movies.each do |movie| %>
        <tr>
          <td><%= movie.rank %></td>
          <td><%= link_to "#{movie.name}", movie_path(movie.id) %></td>
          <td><%= link_to "upvote", movie_upvote_path(movie.id), method: :post, class: "btn btn-default" %></td>
          <% end %>
        </tr>
      </tbody>
    </table>
    <%= link_to "View All Media", root_path, class: "btn btn-default" %>
    <%= link_to "Add a Movie", new_movie_path, class: "btn btn-default" %>
    </div>
  </div>
</div>
