<table class="table table-hover">
  <tr>
    <th>
      Ranking
    </th>
    <th>
      Name
    </th>
    <th>
      Upvote
    </th>
  </tr>
  <% @movies.each do |movie| %>
    <tr>
      <td>
        Ranked: <%= movie.ranked %>
      </td>
      <td>
        <%= link_to movie.name, movie_path(movie) %>
      </td>
      <td>
        <%= button_to "Upvote", movie_upvote_path(movie), method: :patch, class: "btn btn-default" %>
      </td>
    </tr>
  <% end %>
</table>
<%= link_to "View All Media", root_path, method: :get, class: "btn btn-default" %>
<%= link_to "Add a Movie", new_movie_path, method: :get, class: "btn btn-default" %>
