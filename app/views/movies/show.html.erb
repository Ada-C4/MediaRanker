<div class="row">
  <div class="col-lg-12">
    <h1><%= @movie.title %>
        <small>Directed by: <%= @movie.director %></small>
    </h1>
    <h4>Ranked: <%= @movie.ranking %></h4>
    <p><%= @movie.description %></p>
    <div>
      <%= button_to 'Upvote', movie_upvote_path(@movie.id), method: :patch, class: "btn btn-primary" %>
    </div>
    <div>
      <%= link_to "Edit #{@movie.title}", edit_movie_path(@movie.id), class: "btn btn-default" %>
      <%= link_to "Delete",  { :controller=>"movies", action: :destroy, :id => @movie.id}, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
      <%= link_to "View All Movies", movies_path, class: "btn btn-default" %>
      <%= link_to "View All Media", root_path, class: "btn btn-default" %>
    </div>
  </div>
</div>
