<div class="row">
  <div class="col-lg-12">
    <h1><%= @movie.name %> <small>Directed by: <%= @movie.director %></small></h1>
    <h4>Ranked:
      <% if @movie.upvotes.nil? %>
        0
      <% else %>
        <%= @movie.upvotes %>
      <% end %>
    </h4>
    <p>
      <%= @movie.description %>
    </p>
    <%= button_to "Upvote", upvote_movie_path,  method: :patch, class: 'btn btn-primary' %>
    <br />
    <%= link_to "Edit #{@movie.name}", edit_movie_path , class: "btn btn-default" %>
    <%= link_to "DELETE", movie_path(@movie), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    <%= link_to "View All Movies", movies_path,  method: :get, class: 'btn btn-default' %>
    <%= link_to "View All Media", "/",  method: :get, class: 'btn btn-default' %>
  </div>
</div>
