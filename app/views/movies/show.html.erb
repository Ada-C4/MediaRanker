<div class="row">
  <div class="col-lg-12">
    <h1><%= @movie.title %>
        <small>Directed by: <%= @movie.director %></small>
    </h1>
    <h4>Ranked:<%= @movie.ranking %></h4>
    <p><%= @movie.description %></p>
    <div>
      <%= button_to 'Upvote', movie_upvote_path(@movie.id), method: :post %>
    </div>
    <div>
      <%= link_to "Edit #{@movie.title}", edit_movie_path(@movie.id) %>
      <%= link_to "Delete",  { :controller=>"movies", action: :destroy, :id => @movie.id}, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
</div>
