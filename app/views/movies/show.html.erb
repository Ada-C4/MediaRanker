<div class="row">
  <div class="col-lg-12">
    <h1><%= @movie.name %>
    <small>Directed by: <%= @movie.director %></small></h1>
    <h4>Ranked: <%= @movie.rank %></h4>
    <p><%= @movie.description %></p>

    <%= button_to "Upvote", movie_upvote_path(@movie.id), method: :post, class: "btn btn-primary" %>
    <%= link_to "Edit #{@movie.name}", edit_movie_path(@movie.id), class: "btn btn-default" %>
    <%= link_to "DELETE", movie_path(@movie.id), method: :delete, data: { :confirm => "Are you sure?" }, class: " btn btn-danger" %>
    <%= link_to "View All movies", movies_path, class: "btn btn-default" %>
    <%= link_to "View All Media", root_path, class: "btn btn-default"%>
  </div>
</div>
