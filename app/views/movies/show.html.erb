<h1><%= @movie.name %><small> Directed by: <%= @movie.director %></small></h1>
Ranked: <%= @movie.rank %><br>
<%= @movie.description %>

<%= button_to "Upvote", { action: "upvote", id: @movie.id, class: "vote" }, method: "patch" %>
<%= button_to "Edit", edit_movie_path(@movie.id), method: :get %>
<%= button_to "Delete", "/movies/#{@movie.id}", method: :delete %>
<%= button_to "View All Movies", movies_path, method: :get %>
<%= button_to "View All Media", root_path, method: :get %>
