<div class="row">
  <div class="col-lg-12">
    <div class="row">
      <div class="col-md-4">
        <h1>Top Movies</h1>
        <% @movies.top_ten.each do |movie| %>
        <h2><%= link_to "#{movie.title}", movie_path(movie.id), action: :show %>
            <small>Ranked:<%=movie.ranking %></small>
        </h2>
        <% end %>
        <%= link_to "View More Movies", movies_path %>
      </div>
      <div class="col-md-4">
        <h1>Top Books</h1>
        <% @books.top_ten.each do |book| %>
        <h2><%= link_to "#{book.title}", book_path(book.id), action: :show %>
            <small>Ranked:<%=book.ranking %></small>
        </h2>
        <% end %>
        <%= link_to "View More Books", books_path %>
      </div>
      <div class="col-md-4">
        <h1>Top Albums</h1>
        <% @albums.top_ten.each do |album| %>
        <h2><%= link_to "#{album.title}", album_path(album.id), action: :show %>
            <small>Ranked:<%=album.ranking %></small>
        </h2>
        <% end %>
        <%= link_to "View More Albums", albums_path %>
      </div>
    </div>
  </div>
</div>
