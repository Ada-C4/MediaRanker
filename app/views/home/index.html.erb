<%= render partial: 'header' %>
<div>
  <h1>Top Movies</h1>
  <% @movies.each do |movie| %>
    <p>
      <a href="/movies/<%= movie.id %>"><%= movie.name %></a> Ranked:
      <% if movie.upvotes.nil? %>
        0
      <% else %>
        <%= movie.upvotes %>
      <% end %>
    </p>
  <% end %>
  <p>
    <a href="/movies/">View More Movies</a>
  </p>
</div>
