<div class="row"
  <div class="col-lg-12">
    <h1><%= @media.name %> <small><%= created %>: <%= creator %></small></h1>
    <h4>Ranked: <%= @media.votes %></h4>
    <p><%= @media.description %></p>

    <%= button_to 'Upvote', polymorphic_path([:upvote, media]), method: :patch, class: 'btn btn-primary' %>

    <%= link_to "Edit #{media}".titleize, edit_polymorphic_path(media), class: 'btn btn-default' %>
    <%= link_to "DELETE", polymorphic_path(media), method: :delete, class: 'btn btn-danger' %>
    <%= link_to "View All #{medias}".titleize, polymorphic_path(medias), class: 'btn btn-default' %>
    <%= link_to 'View All Media', home_path, class: 'btn btn-default' %>
    
  </div>
</div>