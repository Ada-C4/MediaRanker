<ul>
  <% @movie.errors.each do |column, message| %>
    <li>
      <strong><%= column.capitalize %></strong> <%= message %>
    </li>
  <% end %>
</ul>


<%= form_for @movie do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "col-md-5 control-label text-right" %>
    <div class="col-md-7">
      <%= f.text_field :name, class: "user-field" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :director, class: "col-md-5 control-label text-right"%>
    <div class="col-md-7">
        <%= f.text_field :director, class: "user-field" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "col-md-5 control-label text-right"%>
    <div class="col-md-7">
        <%= f.text_field :description, class: "user-field" %>
    </div>
  </div>

  <div class="form-actions">
      <%= f.submit "Save", class: "submit-button" %>
  </div>
<% end %>
