  <div class="col-lg-12">
    <h2> <%=@what + " " + @type %></h2>
    <%= form_for @item do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
      <%= f.label :creator, @special %>
      <%= f.text_field :creator, class: "form-control" %>
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
      <br>
      <%= f.submit "Save", class: "btn btn-default" %>
    </div>
    <% end %>
  </div>
