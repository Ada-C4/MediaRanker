<%= form_for @media do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <% if @media.class == Movie %>
    <%= f.label :director %>
    <%= f.text_field :director %>
  <% elsif @media.class == Book %>
    <%= f.label :author %>
    <%= f.text_field :author %>
  <% elsif @media.class == Album %>
    <%= f.label :artist %>
    <%= f.text_field :artist %>
  <% end %>
  <br>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br>
  <%= f.hidden_field :ranking, :value => @media.ranking %>
  <%= f.submit value: "Save" %>
<% end %>
