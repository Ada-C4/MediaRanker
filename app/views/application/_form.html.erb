<ul>
  <% @item.errors.each do |column, message| %>
    <li>
      <strong><%= column.capitalize %></strong> <%= message %>
    </li>
  <% end %>
</ul>


<%= form_for @item, url:({action: @action}) do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label @person %>
<%= f.text_field @person %>
<%= f.label :description %>
<%= f.text_area :description %>
<% if @action == "create" %>
  <%= f.hidden_field :votes, :value => 0 %>
<% end %>
<%= f.submit "Save" %>
<% end %>
