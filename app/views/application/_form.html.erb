<div class="row">
  <div class="col-lg-12">
    <h2>New <%= @item.class %></h2>
  </div>
</div>

<ul>
  <% @item.errors.each do |column, message| %>
    <li>
      <strong><%= column.capitalize %></strong> <%= message %>
    </li>
  <% end %>
</ul>
<%= form_for @item, url:({action: @action}) do |f| %>
<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, class:"form-control" %>
  <%= f.label @person %>
  <%= f.text_field @person, class:"form-control" %>
  <%= f.label :description %>
  <%= f.text_area :description, class:"form-control" %>
  <% if @action == "create" %>
    <%= f.hidden_field :votes, :value => 0 %>
  <% end %>
  <br>
  <%= f.submit "Save", class:"btn btn-default" %>
  <% end %>
</div>
