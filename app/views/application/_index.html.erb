
<table class='table table.hover'>
  <tr>
    <th>Ranking</th>
    <th>Name</th>
    <th>Upvote</th>
  </tr>
  <% @media.each do |media| %>
    <tr>
      <td>Ranked: <%= media.votes %></td>
      <td><%= link_to "#{media.name}", polymorphic_path(media) %></td> 
      <td>
        <%= button_to 'Upvote', polymorphic_path([:upvote, media]), :method => :patch, class: 'btn btn-default' %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to 'View All Media', home_path, class: 'btn btn-default' %>
<%= link_to "Add a #{media}".titleize, new_polymorphic_path(media), class: 'btn btn-default' %>

