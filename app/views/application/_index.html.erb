<div class="row">
  <div class="col-lg-12">
    <table class="table table-hover">
      <tr>
        <th>Votes</th>
        <th>Title</th>
        <th>Upvote?</th>
      </tr>
      <% @media.each do |medium| %>
        <tr>
          <td><%= medium.votes.present? ? medium.votes : "0" %></td>
          <td><%= link_to medium.title, polymorphic_path(medium) %></td>
          <td><%= link_to "Upvote!", polymorphic_path(medium, :action => :upvote), :method => :patch, :class => "btn btn-default" %></td>
        </tr>
      <% end %>
    </table>

    <%= link_to "View All Media", "/", class: "btn btn-default" %>
    <%= link_to "Add a #{type.capitalize}", new_polymorphic_path(type), class: "btn btn-default" %>
  </div>  
</div>
