<div class="row">
  <div class="col-lg-12">
    <table class="table table-hover">
      <tr>
        <th>
          Ranking
        </th>
        <th>
          Name
        </th>
        <th>
          Upvote
        </th>
      </tr>
    <% @media.each do |medium| %>
      <tr>
        <td>
          Ranked:
          <% if medium.upvotes.nil? %>
            0
          <% else %>
            <%= medium.upvotes %>
          <% end %>
        </td>
        <td>
          <a href="/media/<%= medium.id %>"><%= medium.name %></a>
        </td>
        <td>
          <%= button_to "Upvote", "/media/#{medium.id}/upvote", method: :patch, class: 'btn btn-default' %>
        </td>
      </tr>
    <% end %>
    </table>
    <a class="btn btn-default" href="/">View All Media</a>
    <a class="btn btn-default" href="/media/new">Add a <%= @medium %></a>
  </div>
</div>
