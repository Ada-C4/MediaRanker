<div class="row">
  <div class="col-lg-12">
    <table class="table table-hover">
      <tr>
        <th>
          Ranking
        </th>
        <th>
          Name
        </th>
        <th>
          Upvote
        </th>
      </tr>
    <% @media.each do |medium| %>
      <tr>
        <td>
          Ranked:
          <% if medium.upvotes.nil? %>
            0
          <% else %>
            <%= medium.upvotes %>
          <% end %>
        </td>
        <td>
          <%= link_to medium.name, media_path(medium.type, medium) %>
        </td>
        <td>
          <%= button_to "Upvote", media_path(medium.type, medium, :upvote), method: :patch, class: 'btn btn-default' %>
        </td>
      </tr>
    <% end %>
    </table>
    <a class="btn btn-default" href="/">View All Media</a>
    <%= link_to "Add a #{@type.capitalize}", media_path(@type, nil, :new), class: "btn btn-default" %>
  </div>
</div>
