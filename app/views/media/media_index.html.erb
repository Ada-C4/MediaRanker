<% case params[:action] %> 
<% when "albums_index" %>
	<%= render partial: 'shared/full_list', 
		locals: { 
			name: "album", 
			media: @albums
		} %> 
<% when "books_index" %> 
	<%= render partial: 'shared/full_list', 
		locals: { 
			name: "book", 
			media: @books
		} %> 
<% when "movies_index" %>
	<%= render partial: 'shared/full_list', 
		locals: { 
			name: "movie", 
			media: @movies
		} %>  
<% end %>