<table class="table table-hover">
  <tbody>
    <tr>
      <th>Ranking</th>
      <th>Name</th>
      <th>Upvote</th>
    </tr>
    <% medias.each do |media| %>
      <tr>
        <td>Ranked: <%= media.upvotes %></td>
        <td><%= link_to media.name, polymorphic_path(media) %></td>
        <td><%= button_to "Upvote",  send(upvote, media.id), method: :post, class: "btn btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "View All Media", root_path, class: "btn btn-default" %>
<%= link_to "Add a #{media.capitalize}", "/#{medias}/new", class: "btn btn-default" %>
