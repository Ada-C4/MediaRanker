<div class="class=col-lg-12">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Ranking</th>
        <th>Name</th>
        <th>Upvote</th>
      </tr>
    </thead>
    <tbody>
      <% media.each do |medium| %>
        <tr>
          <td>Ranked: <%= medium.rank %></td>
          <td><%= link_to medium.name, polymorphic_path(medium) %></td>
          <td><%= link_to "Upvote", polymorphic_path(medium, action: :upvote ),  method: :patch, class: "btn btn-default" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "View All Media", root_path, class: "btn btn-default" %>
  <%= link_to "Add a #{media_type.capitalize}", new_polymorphic_path(media_type), class: "btn btn-default" %>
</div>
