<table>
  <thead>
    <tr>
      <th>Ranking</th>
      <th>Name</th>
      <th>Upvote</th>
    </tr>
  </thead>
  <tbody>
    <% media.each do |m| %>
      <tr>
        <td>Ranked: <%= m.rank %></td>
        <td><%= link_to m.name, polymorphic_path(m) %></td>
        <td><%= link_to "Upvote", polymorphic_path(m, action: :upvote ),  method: :patch %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "View All Media", "/" %>
<%= link_to "Add a #{media_type.capitalize}", new_polymorphic_path(media_type) %>
