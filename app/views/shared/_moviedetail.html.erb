<h1><%= @title %></h1>

  <% @movie.errors.each do |column, message| %>
  <li><%=column.capitalize %> <%= message %></li>
  <% end %>

  <%= form_for @movie, url: {action: @action} do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :director %>
  <%= f.text_field :director %>
  <br>
  <br>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br>
  <%= f.submit "Save" %>
  <% end %>
