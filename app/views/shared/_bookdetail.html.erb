<h1><%= @title %></h1>
  <%= form_for @book, url: {action: @action} do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <br>
  <br>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br>
  <%= f.hidden_field :ranking, value: 0 %>
  <br>
  <br>
  <%= f.submit "Save" %>
  <% end %>
