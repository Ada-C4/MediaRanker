

<h3>Top Movies</h3>
<ul>
  <% @movies.each do |movie| %>
  <li>
    <span class="content-name"><%= link_to movie.name, movie_path(movie.id) %></span>
    Ranked: <%= movie.votes %>
  </li>
  <% end %>
</ul>

<%= link_to "View More Movies", movies_path %>

